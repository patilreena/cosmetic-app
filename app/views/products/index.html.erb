<div class="container">
  <div class="row">
    <% @product.each do |product| %>
      <div class="col-sm-4 col-6">
        <div class="card product-card mb-5">
          <%= link_to product_path(product) do %>
              <%= image_tag product.image_url , class: "img-fluid"%>
          <% end %>
           <div class="card-body">
             <p class="text-h4"><%= product.name %></p>
             <p class="text-h4 text-primary"> $ <%= product.price %></p>
            
           </div>
        </div>
      </div>
      <% if @products.blank? %>
  <!-- <h4>There are no recipes containing the term <%= params[:search] %>.</h4> -->
<% end %>
    <% end %>
  </div>
</div>